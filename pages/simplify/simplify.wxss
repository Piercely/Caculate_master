/* pages/home/home.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.displayArea {
  border: 2px solid black;
  background-color: #aaaaaa;
  width: 80%;
  height: 240rpx;
  margin: 20px auto;
  border-radius: 20rpx;
  font-size: 60rpx;
  line-height: 220rpx;
  font-weight: 500;
  text-align: right;
  padding: 0 2.5%;
}

.calcPanel {
  height: calc(100% - 240rpx);
  width: 85%;
  margin: 0 auto;
  display: flex;
}

.numsPanel {
  flex: 3;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
}

.opertorPanel {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 8rpx;
}

.numsPanelItem,
.opertorPanelItem {
  width: 145rpx;
  height: 130rpx;
  background-color: #dadada;
  font-size:50rpx;
  text-align: center;
  line-height: 140rpx;
  margin: 5rpx 5rpx;
  border-radius: 10rpx;
}